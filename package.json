{
  "name": "email-to-slack",
  "version": "1.0.0",
  "private": true,
  "description": "This system will post the message of email's contents to slack when the target email box received new email.",
  "author": "waricoma <waricoma@devne.co>",
  "contributors": [
    "6terabyte <rinkei.krt6006@gmail.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/waricoma/email-to-slack#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waricoma/email-to-slack.git"
  },
  "scripts": {
    "start": "node ./dist/index.js",
    "quick": "ts-node ./index.ts",
    "build": "ts-node ./build.ts && tsc --lib es2020",
    "readme": "npx readme-md-generator",
    "test": "#",
    "commit": "git cz",
    "lint": "tsc --noEmit && eslint ./*.ts --config ./.eslintrc.js --no-ignore --cache --color --fix",
    "ignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o ./.gitignore",
    "document": "typedoc --plugin typedoc-plugin-markdown --out ./docs/ ./*.ts"
  },
  "keywords": [
    "Slack",
    "Ngrok"
  ],
  "bugs": {
    "url": "https:@typescript-eslint/eslint-plugin//github.com/waricoma/email-to-slack/issues"
  },
  "engines": {
    "yarn": ">=1.22.4",
    "node": ">=12.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run document",
      "pre-push": "#"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  },
  "dependencies": {
    "@slack/web-api": "^5.11.0",
    "@slack/webhook": "^5.0.3",
    "cheerio": "^1.0.0-rc.3",
    "crypto": "^1.0.1",
    "delay": "4.4.0",
    "dotenv": "^8.2.0",
    "imap": "^0.8.19",
    "inbox": "^1.1.59",
    "mail-notifier": "^0.5.0",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "simple-node-imap": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "add-text-to-markdown": "2.0.0",
    "commitizen": "4.1.2",
    "cz-emoji": "1.2.2",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "prettier": "2.0.5",
    "readme-md-generator": "1.0.0",
    "shelljs": "0.8.4",
    "ts-node": "8.10.2",
    "typedoc": "^0.18.0",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "3.9.7"
  }
}
